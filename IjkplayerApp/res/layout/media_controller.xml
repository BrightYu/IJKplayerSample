<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/play_ctrl_bottom_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:minWidth="50dp"
            android:scaleType="center"
            android:src="@drawable/play_ctrl_play_bg"/>

        <ImageView
            android:id="@+id/play_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:minWidth="50dp"
            android:scaleType="center"
            android:src="@drawable/play_ctrl_next"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="40dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>

        <SeekBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:progressDrawable="@drawable/play_seekbar_color_bg"
            android:thumb="@drawable/play_ctrl_sound_ball"
            android:thumbOffset="0dip"/>

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="40dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/full_screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:minWidth="50dp"
            android:scaleType="center"
            android:src="@drawable/play_ctrl_fullscreen_bg"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loading_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/loading_progress"
            android:indeterminateDuration="1000"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/play_ctrl_top_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/play_ctrl_back_bg"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </LinearLayout>
</RelativeLayout>