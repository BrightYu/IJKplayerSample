<?xml version="1.0" encoding="utf-8"?><!-- 普通功能的实现 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@drawable/play_ctrl_top_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/play_ctrl_back_bg" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="@drawable/play_ctrl_bottom_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:minWidth="@dimen/dp_50"
            android:scaleType="center"
            android:src="@drawable/play_ctrl_play_bg" />

        <ImageView
            android:id="@+id/play_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:minWidth="@dimen/dp_50"
            android:scaleType="center"
            android:src="@drawable/play_ctrl_next"
            android:visibility="gone" />

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="@dimen/dp_40"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <SeekBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxHeight="@dimen/dp_2"
            android:minHeight="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:progressDrawable="@drawable/play_seekbar_color_bg"
            android:thumb="@drawable/play_ctrl_sound_ball"
            android:thumbOffset="0dip" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="@dimen/dp_40"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/full_screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:minWidth="@dimen/dp_50"
            android:scaleType="center"
            android:src="@drawable/play_ctrl_fullscreen_bg" />
    </LinearLayout>
</RelativeLayout>